{
  "compilerOptions": {
    "target": "es2017",                                    
    /* Modules */
    "module": "commonjs",                                
    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"]
  }
}
